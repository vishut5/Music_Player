<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="399dp"
        android:layout_height="97dp"
        android:layout_margin="10dp"
        android:contentDescription="Music Card"
        app:cardBackgroundColor="#E5E1DA"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="389dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/MusicImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:contentDescription="Music Image"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/MusicTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:contentDescription="Music Title"
                android:text="Music Name"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/MusicPlay"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:contentDescription="Play Button"
                android:padding="8dp"
                app:srcCompat="@android:drawable/ic_media_play" />

            <ImageButton
                android:id="@+id/MusicPause"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:contentDescription="Pause Button"
                android:padding="8dp"
                app:srcCompat="@android:drawable/ic_media_pause" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
